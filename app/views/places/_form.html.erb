<%= form_with model: @place, local: true,  html:{multipart: true} do |form| %>

  <% if @place.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(place.errors.count, "error") %> prohibited this place from being saved:</h2>

      <ul>
      <% place.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image, id: :place_image %>
  </div>


  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :place_title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :place_description %>
  </div>

  <div class="field">
    <%= form.label :rating %>
    <%= form.number_field :rating, id: :place_rating %>
  </div>

  <div class="field">
    <%= form.label :comment %>
    <%= form.text_field :comment, id: :place_comment %>
  </div>

<hr>

<!-- Map insertion Begin -->
<p>(If you do not know the address enter the name of your place in the address field)</p>
<div class="field">
  <%= form.label :address %>
  <%= form.text_field :address, id: :place_address %>
</div>

<div class="field">
  <%= form.label :city %>
  <%= form.text_field :city, id: :place_city %>
</div>


<div class="field">
  <%= form.label :state %>
  <%= form.text_field :state, id: :place_state %>
</div>

<div class="field">
  <%= form.label :zip %>
  <%= form.text_field :zip, id: :place_zip %>
</div>

<!-- Map insertion End -->

<hr>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
