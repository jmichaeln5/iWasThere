<%= form_for([@place, @place.comments.build]) do |f| %>

<br>
  <%= f.text_area :comment %>
<br>
  <%= f.submit%>
<% end %>
<br>

<% @comments.each do |comment| %>
<hr>
<br>
<p> <%= comment.comment %> </p>
<p><%= time_ago_in_words(comment.created_at) %> ago</p>


<%#= link_to "Edit comment", [comment.place, comment], method: :edit %>
<%= link_to "Delete", [comment.place, comment],method: :delete, data: { confirm: 'Are you sure you want to delete this comment?' } %>

<% end %>
